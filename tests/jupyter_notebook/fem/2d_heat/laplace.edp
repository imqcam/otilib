problem laplace(T,v)=
   int2d(Th)(   -dx(T) * dx(v) ) +
   int2d(Th)(   -dy(T) * dy(v) ) +
   int1d(Th,1)(  10.0*v   ) + 
   on(4,T=5) +// Tleft
   on(2,T=10);
